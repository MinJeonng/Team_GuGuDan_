        <style>
            .sidebar {
                position: fixed;
                top: 50%;
                left: 0;
                width: 150px;
                transform: translateY(-50%);
                overflow-y: auto;
            }
            .cal {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 150px;
                height: 100px;
                cursor: pointer;
            }
            .cal > div {
                border-bottom: 0.1px solid gray;
                text-align: center;
            }
            .cal > svg {
                margin-bottom: 5px;
            }
            .calendar {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 150px;
                height: 100px;
                cursor: pointer;
            }
            .calendar > div {
                border-bottom: 0.1px solid gray;
                text-align: center;
            }
            .calendar > svg {
                margin-bottom: 5px;
            }
            .fontnum {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 150px;
                height: 100px;
                cursor: pointer;
            }
            .fontnum > div {
                border-bottom: 0.1px solid gray;
                text-align: center;
            }
            .fontnum > svg {
                margin-bottom: 5px;
            }
        </style>

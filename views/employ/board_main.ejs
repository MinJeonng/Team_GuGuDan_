<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <h1>kdt11기 게시판</h1>
        <a href="/employ/write">글쓰기</a>
        <a href="/">메인</a>
        <!-- <a href="/profile">내정보조회</a> -->
        <!-- <button type="button" onclick="logout()">로그아웃</button> -->
        <table border="1" cellspacing="0">
            <thead>
                <tr>
                    <th>구인지역</th>
                    <th>구인직종</th>
                    <th>제목</th>
                    <th>시설명</th>
                    <th>경력</th>
                    <th>작성일</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <script>
            const tbody = document.querySelector('tbody');
            (async function () {
                try {
                    const res = await axios({
                        method: 'GET',
                        url: '/api/employ/board/all',

                        headers: {
                            //로그인해야 접근
                            Authorization: `Bearer ${localStorage.getItem('token')}`,
                        },
                    });
                    console.log('res', res);

                    //제목 눌렀을때 상세내용 이동
                    for (let i = 0; i < res.data.result.length; i++) {
                        const html = `
                        <tr>
                            <td>${res.data.result[i].city_name.substring(0, 2)} ${res.data.result[
                            i
                        ].town_name.substring(0, 2)}</td>
                            <td>${res.data.result[i].job}</td>
                            <td><a href="/employ/board/${res.data.result[i].id}">${res.data.result[i].title}</a></td>
                            <td>${res.data.result[i].place_name}</td>
                            <td>${res.data.result[i].career}</td>
                            <td>${res.data.result[i].createdAt.substring(5, 10)}</td>
                        </tr>
                    `;
                        tbody.insertAdjacentHTML('beforeend', html);
                    }
                } catch (error) {
                    //console.log(error);
                    //document.location.href = '/login';
                }
                // <td><a href="/employ/${res.data.result[i].employ_id}">${res.data.result[i].title}</a></td>
            })();
        </script>
    </body>
</html>

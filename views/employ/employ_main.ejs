                            <option>학습지교사</option>
                            <option>보육도우미</option>
                            <option>하모니</option>
                            <option>베이비시터</option>
                            <option>조리사</option>
                            <option>차량안전원</option>
                            <option>간호사</option>
                            <option>운전기사</option>
                            <option>사무직원</option>
                            <option>기타</option>
                            <option>중국어교사</option>
                        </select>
                    </div>
                </div>
                <div class="selectedbox">
                    <div class="sbfont">선택 항목 :</div>
                    <div class="selectedresult"></div>
                </div>
                <div class="selectbtn">
                    <button type="button" class="searchbtn" onclick="searchEmploy()">검색하기</button>
                    <button type="button" class="resetbtn">초기화</button>
                </div>
            </div>
            <div class="writing">
                <div class="wrtop">
                    <div>채용 정보</div>
                    <div class="wrtype">
                        <button class="recentmod">최근 수정일순</button>
                        |
                        <button class="finalreg">최종 등록일순</button>
                        |
                        <button class="lastday">마감일순</button>
                    </div>
                </div>
                <table class="wrtable">
                    <thead>
                        <th>구인지역</th>
                        <th>구인직종</th>
                        <th>제목</th>
                        <th>시설명</th>
                        <th>경력</th>
                        <th>작성일</th>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
        <div class="wrbtn">
            <button type="button" class="writebtn" onclick="window.location.href = '/employ/write';">글쓰기</button>
        </div>

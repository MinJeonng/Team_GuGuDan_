                                <option>경기</option>
                                <option>인천</option>
                                <option>부산</option>
                                <option>대전</option>
                                <option>대구</option>
                                <option>광주</option>
                                <option>울산</option>
                                <option>세종시</option>
                                <option>강원</option>
                                <option>경남</option>
                                <option>경북</option>
                                <option>전남</option>
                                <option>전북</option>
                                <option>충남</option>
                                <option>충북</option>
                                <option>제주</option>
                            </select>
                        </div>
                        <div>
                            <select class="waselect2" style="display: none"></select>
                        </div>
                    </div>
                    <div class="careerselect">
                        <div class="cafont">경력</div>
                        <label class="checkbox-label">
                            <input type="radio" class="notcar" name="radiocareer" value="신입" />
                            신입
                        </label>
                        &nbsp;&nbsp;&nbsp;
                        <label class="checkbox-label">
                            <input type="radio" class="okcar" name="radiocareer" value="경력" />
                            경력
                        </label>
                        &nbsp;&nbsp;&nbsp;
                        <label class="checkbox-label">
                            <input type="radio" class="bothcar" name="radiocareer" value="무관" />
                            경력무관
                        </label>
                    </div>
                    <div class="recfield">
                        <div class="recfont">모집분야</div>
                        <select class="recselect">
                            <option disabled selected>직종분류</option>
                            <option>원장</option>
                            <option>시설장</option>
                            <option>부원장</option>
                            <option>원감</option>
                            <option>부장교사</option>
                            <option>주임교사</option>
